{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": ["esnext"],
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "strict": true,
        "types": ["node"],
        "module": "commonjs",
        "outDir": "dist",
        "target": "es2019"
    },
    "compileOnSave": false,
    "exclude": ["tests", "dist", "node_modules"],
    "include": ["src"]
}
